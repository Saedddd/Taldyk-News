@model TaldykNews.WebUI.Models.ViewModel.Account.RegisterVM

<form method="post" enctype="multipart/form-data">
    <div class="container">
        <h2 class="text-center">Зарегистрировать пользователя</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="">
            <div class="form-row mt-2">
                <label asp-for="FullName" class="col"><b>ФИО</b></label>
                <input asp-for="FullName" class="col">
                <span asp-validation-for="FullName" class="error"></span>
            </div>
            <div class="form-row mt-2">
                <label asp-for="Email" class="col"><b>E-mail</b></label>
                <input asp-for="Email" class="col">
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="form-row mt-2">
                <label asp-for="Password" class="col"><b>Новый пароль</b></label>
                <input asp-for="Password" class="col">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-row mt-2">
                <label asp-for="ConfirmPassword" class="col"><b>Повторите пароль</b></label>
                <input asp-for="ConfirmPassword" class="col">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-row mt-2">
                <label asp-for="Role" class="col"><b>Статус</b></label>
                <select asp-for="Role" class="col">
                    <option value="Writer" selected="selected">Редактор</option>
                    <option value="Admin">Администратор</option>
                </select>
            </div>
            <div class="row mt-2">
                <button type="submit" class="btn btn-primary">
                    Сохранить
                </button>
                <a asp-controller="News" asp-action="Index" class="btn btn-primary">Назад</a>
            </div>
        </div>
</form>

    @section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }