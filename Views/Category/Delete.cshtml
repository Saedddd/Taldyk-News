@model TaldykNews.WebUI.Models.Category

@{
    ViewData["Title"] = "Удалить категорию";
}
<head>
    <link rel="stylesheet" href="~/css/addItem.css">
</head>
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="container">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input asp-for="Name" type="text" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="DisplayOrder" class="control-label">Порядок вывода</label>
                <input asp-for="DisplayOrder" type="number" class="form-control" disabled />
            </div>
            <div class="form-group">
                <input type="submit" class="btn1 btn-danger" value="Удалить" />
            </div>
        </div>
    </div>
</form>